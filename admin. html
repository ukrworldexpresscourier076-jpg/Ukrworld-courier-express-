    <div class="container">
        <h1>Admin Panel - UKRWORLD Courier</h1>

        <!-- Optional: Simple admin password -->
        <script>
            const password = "ADMIN123"; // Change this to a strong password
            const entered = prompt("Enter admin password:");
            if (entered !== password) {
                alert("Access denied");
                window.location.href = "index.html";
            }
        </script>

        <h2>Generate Tracking ID</h2>
        <input type="text" id="recipient" placeholder="Recipient Name">
        <input type="text" id="phone" placeholder="Phone Number">
        <input type="text" id="service" placeholder="Service Type">
        <select id="status">
            <option value="In Transit">In Transit</option>
            <option value="Arrived">Arrived</option>
            <option value="Delivered">Delivered</option>
        </select>
        <button onclick="generateTrackingId()">Generate Tracking ID</button>

        <div id="trackingResult" class="result"></div>
    </div>

    <script>
        function generateRandomId(length = 8) {
            const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
            let result = "";
            for (let i = 0; i < length; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        async function generateTrackingId() {
            const recipient = document.getElementById('recipient').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const service = document.getElementById('service').value.trim();
            const status = document.getElementById('status').value;

            const trackingResult = document.getElementById('trackingResult');

            if (!recipient || !phone || !service) {
                trackingResult.innerHTML = "<p style='color:red;'>Please fill all fields</p>";
                return;
            }

            const trackingId = generateRandomId();

            try {
                await db.collection('packages').doc(trackingId).set({
                    recipient: recipient,
                    phone: phone,
                    service: service,
                    status: status,
                    createdAt: new Date()
                });

                trackingResult.innerHTML = `<p style="color:green;">Tracking ID generated: <b>${trackingId}</b></p>`;
            } catch (error) {
                console.error(error);
                trackingResult.innerHTML = "<p style='color:red;'>Error generating tracking ID</p>";
            }
        }
    </script>
