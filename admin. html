  <div class="container">
    <h1>Admin Panel</h1>

    <label>Customer Name</label>
    <input type="text" id="customer" placeholder="Enter customer name">

    <label>Tracking ID</label>
    <input type="text" id="tracking" placeholder="Click Generate" readonly>

    <button onclick="generateTracking()">Generate Tracking ID</button>

    <div class="result" id="result"></div>
  </div>

  <script>
    function generateTracking() {
      const prefix = "UKR"; // company prefix
      const randomNumber = Math.floor(100000 + Math.random() * 900000);
      const trackingId = prefix + randomNumber;

      document.getElementById("tracking").value = trackingId;
      document.getElementById("result").innerText = 
        "Tracking ID generated successfully!";
    }
  </script>

