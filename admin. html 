<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - UKRWORLD Tracking</title>
  <link rel="stylesheet" href="style.css">
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore-compat.js"></script>
  <script src="firebase.js"></script>
</head>
<body>
  <h2>Admin Panel - UKRWORLD COURIER EXPRESS</h2>

  <form id="packageForm">
    <input type="text" id="recipient" placeholder="Recipient Name" required><br>
    <input type="text" id="phone" placeholder="Phone Number" required><br>
    <input type="text" id="service" placeholder="Service Type" required><br>
    <button type="submit">Generate Tracking ID</button>
  </form>

  <h3>All Packages</h3>
  <ul id="packageList"></ul>

  <script>
    const form = document.getElementById('packageForm');
    const list = document.getElementById('packageList');

    // Generate Tracking ID
    function generateID() {
      const date = new Date().toISOString().slice(0,10).replace(/-/g,"");
      const random = Math.random().toString(36).substring(2,6).toUpperCase();
      return `UKRWORLD-${date}-${random}`;
    }

    // Add package
    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      const recipient = document.getElementById('recipient').value;
      const phone = document.getElementById('phone').value;
      const service = document.getElementById('service').value;
      const trackingID = generateID();

      await db.collection('packages').doc(trackingID).set({
        recipient,
        phone,
        service,
        status: 'In Transit',
        createdAt: firebase.firestore.FieldValue.serverTimestamp()
      });

      alert(`Tracking ID Generated: ${trackingID}`);
      form.reset();
      loadPackages();
    });

    // Load all packages
    async function loadPackages() {
      list.innerHTML = '';
      const snapshot = await db.collection('packages').orderBy('createdAt','desc').get();
      snapshot.forEach(doc=>{
        const data = doc.data();
        const li = document.createElement('li');
        li.innerHTML = `<b>${doc.id}</b> - ${data.recipient} - ${data.phone} - ${data.service} - Status: ${data.status}`;
        list.appendChild(li);
      });
    }

    loadPackages();
  </script>
</body>
</html>